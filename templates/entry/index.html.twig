{% extends 'base.html.twig' %}

{% block title %}Entry index{% endblock %}

{% block body %}
    <h1>Entry index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Entry_val</th>
                <th>Status</th>
                <th>Posted_by</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entry in entries %}
            <tr>
                <td>{{ entry.id }}</td>
                <td>{{ entry.type }}</td>
                <td>{{ entry.entryVal }}</td>
                <td>{{ entry.status }}</td>
                <td>{{ entry.postedBy }}</td>
                <td>
                    <a href="{{ path('app_entry_show', {'id': entry.id}) }}">show</a>
                    <a href="{{ path('app_entry_edit', {'id': entry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entry_new') }}">Create new</a>
{% endblock %}
